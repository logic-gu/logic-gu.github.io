{% comment %}
    Print a pretty date (somehow)
    input:
        location 
    output:
        something
{% endcomment %}
{%- assign loc = include.location -%}
<i class="fa-solid fa-location-dot fa-sm"></i> 
{% case loc -%}
    {%- when "Online", "online" -%}
        Online
    {%- when "Zoom", "zoom" -%}
        Zoom
    {%- else -%}
        {{ loc }}
{%- endcase -%}
